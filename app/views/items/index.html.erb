<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-3">Name</div>
    <div class="col-lg-3">Price</div>
    <div class="col-lg-6"></div>
  </div>

  <% @items.each do |item| %>
    <div class="row">
      <div class="col-lg-3"><%= item.name %></div>
      <div class="col-lg-3"><%= item.price %></div>
      <div class="col-lg-2"><%= link_to 'Show', item %></div>
      <div class="col-lg-2"><%= link_to 'Edit', edit_item_path(item) %></div>
      <div class="col-lg-2"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Item', new_item_path %>
